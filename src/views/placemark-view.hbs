{{> menu}}

<form class="box"  action="/placemark/{{category._id}}/updateplacemark/{{placemark._id}}" method="POST">
    <label>Update Placemark Details:</label>
    <div class="field is-horizontal">
        <div class="field-body">
            <div class="field">
                <input class="input" type="text" name="title", value="{{placemark.title}}">
            </div>
            <div class="field">
                <input class="input" type="text" name="location" value="{{placemark.location}}">
            </div>
            <div class="field">
                <input class="input" type="text"  name="analytics" value="{{placemark.analytics}}">
            </div>
            <div class="field">
                <input class="input" type="text"  name="description" value="{{placemark.description}}">
            </div>
        </div>
    </div>
    <button class="button is-primary">Update Placemark</button>
</form>