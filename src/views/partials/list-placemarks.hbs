<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Placemark</th>
      <th>Location</th>
      <th>Analytics</th>
      <th>Description</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each category.placemarks}}
    <tr>
      <td>
        {{title}}
      </td>
      <td>
        {{location}}
      </td>
      <td>
        {{analytics}}
      </td>
      <td>
       {{description}}
      </td>
        <td>
            <figure class="image is-128x128">
                <img src={{image}}>
            </figure>
        </td>

      <td>
         <a href="/placemark/{{../category._id}}/editplacemark/{{_id}}" class="ui icon button">
            <i class="fas fa-edit"></i>
            </a>
      </td>
      <td>
         <a href="/category/{{../category._id}}/deleteplacemark/{{_id}}" class="ui icon button">
           <i class="fas fa-trash"></i>
            </a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>