{{> menu active="credentials"}}

<section class="section">
    <div class="hero-body has-text-centered">
        <p class="title ">
            Account Details</p>
                <form  class="ui stacked segment form"  action="/update" method="POST">
                    <div class="two fields">
                    <div class="field">
                        <label>First Name</label>
                        <input placeholder="First Name" type="text" name="firstName" value="{{account.firstName}}">
                    </div>
                    <div class="field">
                        <label>Last Name</label>
                        <input placeholder="Last Name" type="text" name="lastName" value="{{account.lastName}}">
                    </div>
                    <div class="field">
                    <label>Email</label>
                    <input placeholder="Email" type="text" name="email" value="{{account.email}}" disabled="disabled">
                </div>
                <div class="field">
                    <label>Password</label>
                    <input type="password" name="password">
                </div>
                <button class="ui blue submit button">Submit</button>
                    </div>
            </form>

    </div>
</section>