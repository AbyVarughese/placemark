    <dl>
      <dt>Title</dt>
      <dd>{{placemark.title}}</dd>
      <dt>Location</dt>
      <dd>{{placemark.location}}</dd>
      <dt>Latitude</dt>
      <dd>{{placemark.latitude}}</dd>
      <dt>Longitude</dt>
      <dd>{{placemark.longitude}}</dd>
      <dt>Analytics</dt>
      <dd>{{placemark.analytics}}</dd>
      <dt>Description</dt>
      <dd>{{placemark.description}}</dd>
      <dt>Description</dt>
      <dd>{{placemark.description}}</dd>
      <dt>Image</dt>
      <dd>
        <figure class="image is-128x128">
          <img src={{placemark.image}}>
        </figure>
      </dd>
    </dl>

    <div class="content">
      <h3>Reviews:</h3>
    {{#each reviews}}
    <blockquote>
      <p><em>{{reviewDate}}; Rating: <b>{{rating}}</b></em></p>
      {{message}}
    </blockquote>
    <p>&nbsp;</p>
    {{/each}}
    </div>
    <p>&nbsp;</p>
    {{#if loggedInUser}}    
    <hr>
    <p><b>Submit your review</b></p> </br>
<form class="box" action="/public/review/{{placemark._id}}" method="POST">
    <div class="field">
      <label class="label">Message</label>
      <div class="control">
        <textarea class="textarea" name="message" placeholder="Write your review">{{messageText}}</textarea>
      </div>
    </div>
    <div></div>
    <div class="control">
      <label class="label">Rating</label>
      <label class="radio">
        <input type="radio" name="rating" value="1">
        1
      </label>
      <label class="radio">
        <input type="radio" name="rating" value="2">
        2
      </label>
      <label class="radio">
        <input type="radio" name="rating" value="3">
        3
      </label>
      <label class="radio">
        <input type="radio" name="rating" value="4">
        4
      </label>
      <label class="radio">
        <input type="radio" name="rating" value="5">
        5
      </label>
    </div>

    <button class="button is-primary">Post review</button>
</form>
{{/if}}
<p>&nbsp;</p>